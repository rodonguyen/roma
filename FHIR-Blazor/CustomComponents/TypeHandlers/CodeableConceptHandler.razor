@using Hl7.Fhir.Model;
@using Hl7.Fhir.Rest;
@using Hl7.Fhir.Serialization;
@using FHIRBlazor.Pages;

@*This component handles displaying the codeable concept datatype in the tables

	This was implemented due to the varying nature of CodeableConcept
*@

<ErrorBoundary>
	<ChildContent>
		@if (Data != null)
		{
			@foreach (var coding in Data.Coding)
			{
				@if (coding.Display != null)
				{
					<a>@coding.Display</a>
				}
				else
				{
					<a>@coding.Code</a>
				}
			}
		}
		else
		{
			<a></a>
		}
	</ChildContent>
	<ErrorContent>
		<a>error</a>
	</ErrorContent>
</ErrorBoundary>


@code {
	[Parameter] public CodeableConcept Data { get; set; }

}




